{
   "compilerOptions": {
      "baseUrl": "src",
      "outDir": "dist",
      "target": "ESNext",
      "skipLibCheck": true,
      "allowJs": true, // 允许编译JavaScript文件
      "useDefineForClassFields": true,
      "moduleResolution": "node"
   },
   "include": [
      "src",
      "vite.config.ts",
      "vitest.setup.ts"
   ],
   "esModuleInterop": true
}
